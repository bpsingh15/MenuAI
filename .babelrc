{
  "presets": ["next/babel"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "@": "./",
          "@/components": "./components",
          "@/lib": "./lib",
          "@/types": "./types",
          "@/data": "./data",
          "@/app": "./app",
          "@/public": "./public"
        }
      }
    ]
  ]
} 